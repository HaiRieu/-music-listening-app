<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp" android:layout_marginRight="10dp"
    android:background="#615A5A"
    >

    <LinearLayout
        android:id="@+id/linia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
        <ImageView
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:id="@+id/imagebuton_album"
            android:layout_width="200dp"
            android:layout_height="200dp"
            >

        </ImageView>

        <TextView
            android:id="@+id/text_tenALbum"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:textSize="20sp"
            android:text="mua dong vawng em "
            android:maxLines="1"
            android:layout_marginTop="2dp"
           android:layout_marginLeft="5dp"
            android:textColor="#EEF4F4"

            ></TextView>

        <TextView
            android:id="@+id/txt_tencsalbum"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sown tung"
            android:textColor="#EFE7E7"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            ></TextView>




    </LinearLayout>

</androidx.cardview.widget.CardView>