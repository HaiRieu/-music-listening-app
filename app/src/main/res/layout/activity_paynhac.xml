<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.paynhac"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="#9BB0C1
"
    >
   <androidx.appcompat.widget.Toolbar
       android:layout_width="match_parent"
       android:layout_height="?attr/actionBarSize"
       android:id="@+id/totbapaynhac"
       />

    <androidx.viewpager.widget.ViewPager
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:id="@+id/viupage"
        android:layout_height="0dp"

        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/giaychay"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="00:00"
            android:textColor="#f20"
            android:textSize="16sp"
            android:textStyle="bold" />
       <LinearLayout
           android:orientation="horizontal"
           android:gravity="center"
           android:weightSum="10"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           >



           <SeekBar
               android:id="@+id/thanhnhac"
               android:thumbTint="@color/material_dynamic_neutral10"
               android:progressTint="#CCCC00"
               android:layout_weight="8"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>


       </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageviewButtonShuffle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:scaleType="fitXY"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/luibai"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/luibai"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/phatnhac"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/play"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/chyenbai"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"

                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/chuyenbai"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/lapbai"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/repeat"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>


    </LinearLayout>




</LinearLayout>