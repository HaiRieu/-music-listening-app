<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imaghebuton_playlist"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        ></ImageView>

    <View
        android:id="@+id/view_playlist"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/backgroud"
        ></View>

    <ImageView
        android:id="@+id/imgae_playlist"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="6dp"
        android:layout_alignBottom="@id/imaghebuton_playlist"
        android:scaleType="fitXY"

        ></ImageView>

     <TextView
         android:id="@+id/textviewdong"
         android:ellipsize="end"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:maxLines="1"
         android:text="Top 100 ca khúc Vpop hay nhất"
         android:textColor="#ffff"
         android:textStyle="bold"
         android:layout_toRightOf ="@+id/imgae_playlist"
         android:layout_alignBottom="@id/imgae_playlist"
         android:layout_marginBottom="5dp"
         android:layout_marginRight="50dp"
         android:layout_marginLeft="5dp"

         ></TextView>






</RelativeLayout>