<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView

        android:id="@+id/imgae_baihathot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:scaleType="fitXY"></ImageView>
    
    <TextView
        android:id="@+id/tenbaihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgae_baihathot"
        android:layout_marginLeft="10dp"
        android:text="SOn tung mtp"
        android:textSize="18sp"
        android:maxLines="1"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:textColor="#F6F6F6"
        ></TextView>

    <TextView
        android:id="@+id/tencasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tenbaihat"
        android:layout_toRightOf="@+id/imgae_baihathot"
        android:layout_marginLeft="12dp"
        android:text="sont utng"
        android:textSize="15sp"
        android:maxLines="1"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:textColor="#F6F6F6"
        ></TextView>
    
    <ImageView
        android:id="@+id/imgedethich"
        android:src="@drawable/timtrang"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp">

    </ImageView>


</RelativeLayout>